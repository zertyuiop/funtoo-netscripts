INT=eth0

depend() {
	provide net
	after net.lo
}

start() {
	ebegin "Bringing up network interface $INT"
	ifconfig $INT 0.0.0.0 up
	eend $?
}

stop() {
	ebegin "Shutting down network interface $INT"
	ifconfig $INT down
	eend $?
}

